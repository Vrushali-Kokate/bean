
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for menu items
    match /menu_items/{itemId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write/edit menu
    }

    // Protect all other collections (e.g., orders, users)
    // They can only be accessed by authenticated users.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
